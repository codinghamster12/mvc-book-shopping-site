<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/main.js"></script>



    <link href="~/Content/css.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
          crossorigin="anonymous" />

</head>
<body>

    <div class="container">

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1><a href="#">READINGS</a></h1>

                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="account">
                    <ul>
                        <li>
                            <div class="hidden-xs">
                                <h4><a>Call</a></h4>
                                <p>010-#####-####</p>
                            </div>
                            <div class="visible-xs">
                                <p>0100-####-####</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        

        <div class="row">

            <div class="col-md-12">
                
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid" style="margin:0;">

                        <ul class="nav navbar-nav">
                            <li class="active"><a href="@Url.Action("Index","Product")">Home</a></li>
                            <li><a href="@Url.Action("About","Home")">About</a></li>
                            <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Register","User")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                            <li><a href="@Url.Action("Login","User")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                            <li><a href="@Url.Action("Index","Cart")"><i class="fas fa-shopping-cart"></i>Cart</a></li>
                        </ul>
                    </div>
                </nav>
            </div>

        </div>

        @RenderBody()
        <hr />
        <footer>
            <div class="row copyright">
                <div class="col-sm-4 col-md-4 col-xs-4 copyright-left">
                    <p>&copy; @DateTime.Now.Year - Readings. All right reserved.</p>
                </div>
                <div class="col-sm-4 col-md-4 col-xs-4 copyright-middle">
                    <h4 class="heading">Contacts</h4>
                    <dl class="contact-list">
                        <dt>Address:</dt>
                        <dd>798 South Park Avenue, Jaipur, Raj</dd>
                    </dl>
                    <dl class="contact-list">
                        <dt>email:</dt>
                        <dd><a href="mailto:#">dkstudioin@gmail.com</a></dd>
                    </dl>
                    <dl class="contact-list">
                        <dt>phones:</dt>
                        <dd>
                            <a href="tel:#">https://karosearch.com</a> <span>or</span> <a href="tel:#">https://karosearch.com</a>
                        </dd>
                    </dl>
                </div>

                <div class="col-sm-4 col-md-4 col-xs-4 copyright-right">
                    <ul class="list-unstyled list-social">
                        <li><i class="fab fa-facebook-square sm-icon"></i></li>
                        <li><i class="fab fa-twitter sm-icon"></i></li>
                        <li><i class="fab fa-google-plus sm-icon"></i></li>

                    </ul>
                </div>
                </div>


        </footer>

    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/js")
    @RenderSection("scripts", required: false)
    
    <script>
      $(".show").click(function(){
    $(".error-message").show();
  });
    </script>
</body>
</html>
