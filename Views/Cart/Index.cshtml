
@model bookstore1.Models.Book
@using bookstore1.Models;


<form class="form-horizontal" method="post" action="">
    <div class="container">
    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 col-sm-offset-3">
        <!--REVIEW ORDER-->
        <div class="panel panel-info">
            <div class="panel-heading">
                Review Order <div class="pull-right"><small><a class="afix-1" href="#">Edit Cart</a></small></div>
            </div>
            @foreach (Item item in (List<Item>)Session["cart"])
            {
                <div class="panel-body">


                    <div class="form-group">

                        <div class="col-sm-3 col-xs-3">
                            <img class="img-responsive" src="@Url.Content(item.book.Cover)" />
                        </div>
                        <div class="col-sm-6 col-xs-6">
                            <div class="col-xs-12">@item.book.Title</div>
                            <div class="col-xs-12"><small>Quantity:<span>@item.Quantity</span></small></div>
                        </div>
                        <div class="col-sm-3 col-xs-3 text-right">
                            <h6><span>$</span>@item.book.Price</h6>
                        </div>

                    </div>
                </div>
            }








            <div class="form-group"><hr /></div>
            <div class="form-group">
                <div class="col-xs-12">
                    <strong class="subtotal">Subtotal</strong>
                    @{
                        List<Item> cart = (List<Item>)Session["cart"];
                        var total = cart.Sum(i => i.book.Price * i.Quantity);
                    }
                    <div class="pull-right"><span>$</span><span>@total</span></div>
                </div>
            </div>
        </div>


        <input type="button" class="btn btn-primary cart" onclick="location.href='@Url.Action("Index", "Product")'" value="Continue Shopping"></input>
        <input type="button" class="btn btn-success pull-right cart" onclick="location.href='@Url.Action("Login", "User")'" value="Checkout"></input>




        <!--REVIEW ORDER END-->
 



        </div>
    </div>
    






